FROM docker.io/defreitas/tools_graalvm-22.3_java-19_debian-9:0.1.1 AS BUILDER
COPY ./ /app
WORKDIR /app
RUN ./gradlew clean build -Dquarkus.package.type=native -i &&\
    ./gradlew build -Dquarkus.package.type=uber-jar -i -x check &&\
    ls -lha ./build &&\
    mkdir -p ./artifacts/linux-amd64 && mkdir -p ./artifacts/jre &&\
    mv ./build/dns-proxy-server ./artifacts/linux-amd64/ &&\
    mv ./build/dns-proxy-server.jar ./artifacts/jre/

ENTRYPOINT cat
